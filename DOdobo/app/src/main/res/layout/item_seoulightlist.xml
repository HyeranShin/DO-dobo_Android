<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_seoulightlist"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="99dp"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/iv_image_seoulight"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:src="@color/colorAccent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title_seoulight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:text="여기는 타이틀"
            android:fontFamily="@font/nanumsquare_bold"
            android:textSize="15sp"
            android:textColor="#434343"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="19dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_language_seoulight"
                android:fontFamily="@font/nanumsquare_regular"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="일본어"
                android:background="@drawable/ic_language_type"/>
            <ImageView
                android:layout_width="9dp"
                android:layout_height="13dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/ic_date"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_date_seoulight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="2018.09.01"
                android:fontFamily="@font/nanumsquare_regular"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:textColor="#434343"/>
            <ImageView
                android:layout_width="11dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_person"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_people_seoulight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquare_regular"
                android:textColor="#434343"
                android:layout_gravity="center_vertical"
                android:text="3-5 명"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>