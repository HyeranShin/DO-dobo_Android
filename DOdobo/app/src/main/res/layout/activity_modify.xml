<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <ImageButton
            android:id="@+id/btn_back_modify"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_back_btn"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 수정"
            android:textSize="20sp"
            android:fontFamily="@font/nanumsquare_regular"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="188dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_modify"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="#79C8C6"/>
        <ImageButton
            android:id="@+id/btn_changephoto_modify"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/iv_profile_modify"
            android:layout="@+id/iv_profile_modify"
            android:src="@drawable/ic_photoedit"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:layout_alignEnd="@+id/iv_profile_modify"/>
        <ImageButton
            android:id="@+id/btn_applyseoulight_modify"
            android:layout_width="105dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/group_4_copy_2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icon_seoulight_modify"
                android:layout_alignBottom="@+id/tv_name_modify"
                android:layout_width="86dp"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_commentator"
                android:paddingRight="40dp"/>
            <TextView
                android:id="@+id/tv_name_modify"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="14sp"
                android:textColor="#434343"
                android:fontFamily="@font/nanumsquare_regular"
                android:gravity="center"/>
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="#434343"
            android:gravity="center_vertical"
            android:fontFamily="@font/nanumsquare_regular"
            android:text="Henrietta Moss"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#86c9c9c9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="이메일"
            android:textSize="14sp"
            android:textColor="#434343"
            android:fontFamily="@font/nanumsquare_regular"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="#434343"
            android:gravity="center_vertical"
            android:fontFamily="@font/nanumsquare_regular"
            android:text="email@email.com"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#86c9c9c9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="비밀번호 수정"
            android:textSize="14sp"
            android:textColor="#434343"
            android:fontFamily="@font/nanumsquare_regular"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_password1_modify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="hello"
                android:inputType="textPassword"
                android:textColor="#434343"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/btn_show1_modify"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_show"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#86c9c9c9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="비밀번호 확인"
            android:textSize="14sp"
            android:textColor="#434343"
            android:fontFamily="@font/nanumsquare_regular"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et_password2_modify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="#434343"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:text="hello"
                android:background="@android:color/transparent"/>
            <ImageView
                android:id="@+id/btn_show2_modify"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_show"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#86c9c9c9"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fbfbfb">
        <Button
            android:id="@+id/btn_complete_modify"
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:background="@drawable/rectangle_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp"
            android:fontFamily="@font/nanumsquare_regular"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="수정완료"
            />
    </RelativeLayout>
</LinearLayout>