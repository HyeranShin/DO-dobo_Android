<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DO! dobo"
            android:textSize="20sp"
            android:fontFamily="@font/nanumsquare_regular"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="114dp"
            android:layout_height="22dp"
            android:gravity="center_vertical"
            android:text="오늘의 dobo"
            android:textSize="16dp"
            android:textColor="#579f9d"
            android:paddingLeft="15dp"
            android:fontFamily="@font/nanumsquare_bold"
            android:background="@drawable/home"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="7dp">
                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="110dp"
                    android:src="#579f9d"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_doboname_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="41dp"
                android:fontFamily="@font/nanumsquare_bold"
                android:text="여의나루\n밤도깨비시장"
                android:textColor="#000000"
                android:textSize="21sp" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="22dp"
            android:background="@drawable/rectangle_12_copy"
            >
            <TextView
                android:id="@+id/tv_todaydobo_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="오늘의 dobo "
                android:textSize="16dp"
                android:textColor="#579f9d"
                android:paddingLeft="15dp"
                android:fontFamily="@font/nanumsquare_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="with Seoulight"
                android:textSize="12dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="1dp"
                android:textColor="#579f9d"
                android:fontFamily="@font/nanumsquare_regular"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="7dp">
            <ImageView
                android:layout_width="190dp"
                android:layout_height="110dp"
                android:src="#579f9d"
                android:background="#FFFFFF"
                android:elevation="4dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_seoulightname_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/nanumsquare_bold"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="42dp"
            android:text="양재 시민의 숲(매헌)\n꽃 시장 탐방 코스"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="14dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="11dp"
                android:src="@drawable/ic_date_home"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#585858"
                android:textSize="8sp"
                android:text="2018.09.18"
                android:layout_marginLeft="1dp"
                android:fontFamily="@font/nanumsquare_regular"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="11dp"
                android:src="@drawable/ic_person"
                android:layout_marginLeft="9dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#585858"
                android:textSize="8sp"
                android:text="10명"
                android:fontFamily="@font/nanumsquare_regular"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:orientation="vertical"
        android:background="@drawable/combined_shape"
        >
        <RelativeLayout
            android:id="@+id/btn_inform_dobo_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/nanumsquare_regular"
                android:text="&quot;서울 도보관광&quot; 이란?"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5ba4be89"/>
        <RelativeLayout
            android:id="@+id/btn_inform_seoulight_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/nanumsquare_regular"
                android:text="&quot;Seoulight&quot; 란?"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
