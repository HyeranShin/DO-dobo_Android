<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="20sp"
            android:fontFamily="@font/nanumsquare_regular"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <ImageButton
                android:id="@+id/ib_all_dobocategory"
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_all"
                android:background="@android:color/transparent"
                android:layout_marginBottom="28dp"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/ib_candicaped_dobocategory"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:src="@drawable/ic_handicaped_people"
                    android:background="@android:color/transparent" />
                <ImageButton
                    android:id="@+id/ib_cityhall_dobocategory"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:src="@drawable/ic_seoul_city_hall"
                    android:layout_marginHorizontal="17dp"
                    android:background="@android:color/transparent" />
                <ImageButton
                    android:id="@+id/ib_lake_dobocategory"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:src="@drawable/ic_lake"
                    android:background="@android:color/transparent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="27dp">
                <ImageButton
                    android:id="@+id/ib_seoullo_dobocategory"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:src="@drawable/ic_seoullo_7017"
                    android:background="@android:color/transparent" />
                <ImageButton
                    android:id="@+id/ib_historicsite_dobocategory"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:src="@drawable/ic_historic_site"
                    android:layout_marginHorizontal="17dp"
                    android:background="@android:color/transparent" />
                <ImageButton
                    android:id="@+id/ib_pilgrimage_dobocategory"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:src="@drawable/ic_pilgrimage_road"
                    android:background="@android:color/transparent" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/ib_etc_dobocategory"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginTop="27dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_etc"
                android:layout_marginHorizontal="17dp"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>