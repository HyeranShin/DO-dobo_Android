<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <ImageView
            android:id="@+id/btn_back_suggestion"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_back_btn_mint"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건의사항"
            android:textSize="20sp"
            android:fontFamily="@font/nanumsquare_regular"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#434343"
            android:text="제목"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="59dp"
            />

        <EditText
            android:id="@+id/et_title_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:hint="제목을 입력해주세요."
            android:letterSpacing="0.01"
            android:singleLine="true"
            android:textColor="#434343"
            android:textColorHint="#bcbcbc"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="#fbfbfb"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#434343"
            android:layout_marginTop="17dp"
            android:text="내용"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="59dp"
            />

        <EditText
            android:id="@+id/et_content_suggestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="54dp"
            android:layout_marginVertical="16dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="건의 내용을 입력해주세요."
            android:letterSpacing="0.01"
            android:textColor="#434343"
            android:textColorHint="#bcbcbc"
            android:textSize="12sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fbfbfb">
        <Button
            android:id="@+id/btn_submit_suggestion"
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:background="@drawable/rectangle_2"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="제출하기"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>