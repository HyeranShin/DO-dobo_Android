<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="283dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/linear_notify_review">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_back_notifyreview"
            android:layout_width="14dp"
            android:layout_height="13dp"
            android:background="@android:color/transparent"
            android:src="@drawable/dismiss_btn_black"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고 사유를 선택해주세요."
            android:layout_gravity="bottom"
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquare_bold"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="22dp"
        android:background="#86c9c9c9"
        android:layout_marginTop="17dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="욕설 및 비방"
        android:fontFamily="@font/nanumsquare_light"
        android:textSize="11sp"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="22dp"
        android:background="#86c9c9c9"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="같은 내용의 반복 게시(도배)"
        android:fontFamily="@font/nanumsquare_light"
        android:textSize="11sp"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="22dp"
        android:background="#86c9c9c9"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="음란성/선정성"
        android:fontFamily="@font/nanumsquare_light"
        android:textSize="11sp"
        android:gravity="center" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="22dp"
        android:background="#86c9c9c9"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="기타"
        android:fontFamily="@font/nanumsquare_light"
        android:textSize="11sp"
        android:gravity="center"/>
</LinearLayout>