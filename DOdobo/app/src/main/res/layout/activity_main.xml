<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/frame_main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/tab_bottom_main"></FrameLayout>
    <LinearLayout
        android:id="@+id/tab_bottom_main"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:elevation="5dp">
        <ImageView
            android:id="@+id/btn_home_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingVertical="6dp"
            android:src="@drawable/ic_home_p"/>
        <ImageView
            android:id="@+id/btn_dobo_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingVertical="6dp"
            android:src="@drawable/ic_dobo"/>
        <ImageView
            android:id="@+id/btn_recommend_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingVertical="6dp"
            android:src="@drawable/ic_recommend"/>
        <ImageView
            android:id="@+id/btn_mypage_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingVertical="6dp"
            android:src="@drawable/ic_mypage"/>
    </LinearLayout>

    <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/vp_main"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></android.support.v4.view.ViewPager>-->
</RelativeLayout>