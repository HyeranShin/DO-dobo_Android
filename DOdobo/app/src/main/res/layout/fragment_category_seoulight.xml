<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="20sp"
            android:fontFamily="@font/nanumsquare_regular"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/ib_all_seoulightcategory"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_all"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/ib_activity_seoulightcategory"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_activity"
            android:layout_toLeftOf="@+id/ib_all_seoulightcategory"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="16dp"
            android:layout_alignBottom="@+id/ib_all_seoulightcategory"
        />
        <ImageButton
            android:id="@+id/ib_food_seoulightcategory"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_food"
            android:layout_toLeftOf="@+id/ib_all_seoulightcategory"
            android:layout_marginTop="70dp"
            android:layout_marginRight="16dp"
            android:layout_alignTop="@+id/ib_all_seoulightcategory"
            />
        <ImageButton
            android:id="@+id/ib_history_seoulightcategory"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_history"
            android:layout_toRightOf="@+id/ib_all_seoulightcategory"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="16dp"
            android:layout_alignBottom="@+id/ib_all_seoulightcategory"
            />
        <ImageButton
            android:id="@+id/ib_festival_seoulightcategory"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_festival"
            android:layout_toRightOf="@+id/ib_all_seoulightcategory"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="16dp"
            android:layout_alignTop="@+id/ib_all_seoulightcategory"
            />
        <ImageButton
            android:id="@+id/ib_culture_seoulightcategory"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_culture"
            android:layout_above="@+id/ib_all_seoulightcategory"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp"
            />
        <ImageButton
            android:id="@+id/ib_etc_seoulightcategory"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_etc"
            android:layout_below="@+id/ib_all_seoulightcategory"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            />
    </RelativeLayout>
</LinearLayout>