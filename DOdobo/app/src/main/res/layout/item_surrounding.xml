<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115dp"
    android:layout_height="144dp"
    android:layout_marginRight="13dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_image_surrounding"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@android:color/holo_orange_light"/>
    <TextView
        android:id="@+id/tv_title_surrounding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맛집이지롱"
        android:fontFamily="@font/nanumsquare_bold"
        android:textSize="12sp"
        android:textColor="#434343"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="7dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_icon_surrounding"
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_fork"
            android:layout_marginRight="1dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_category_surrounding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식음료"
            android:fontFamily="@font/nanumsquare_light"
            android:textSize="10sp"
            android:textColor="#434343"/>
    </LinearLayout>
</LinearLayout>